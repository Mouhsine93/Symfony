<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
    {% endblock %}
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
           <nav class="col-md-3 col-lg-2 d-md-block sidebar">
    <div class="position-sticky pt-3">
        <div class="logo-details">
            <img src="{{ asset('images/icon/logo2.ico') }}" alt="Logo" id="logo">
            <span class="logo_name">Gestion de Stock</span>
        </div>

    </div>


</nav>
  <!-- Main content -->
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    {% block body %}
    
    <h1 class="h3 mb-3 font-weight-normal">Page d'inscription</h1>

    {# Affichage des erreurs de formulaire #}
    {{ form_errors(registrationForm) }}

    {# Début du formulaire d'inscription #}
    {{ form_start(registrationForm, { 'attr': {'class': 'form-signin'} }) }}

        {# Champ pour le nom d'utilisateur #}
        <div class="mb-3">
            {{ form_row(registrationForm.nom_utilisateur, {
                label: 'Nom d\'utilisateur',
                attr: {'class': 'form-control'}
            }) }}
        </div>

        {# Champ pour l'email #}
        <div class="mb-3">
            {{ form_row(registrationForm.email, {
                label: 'Email',
                attr: {'class': 'form-control'}
            }) }}
        </div>

        {# Champ pour le mot de passe #}
        <div class="mb-3">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe',
                attr: {'class': 'form-control'}
            }) }}
        </div>

        {# Case à cocher pour accepter les termes #}
        <div class="mb-3 form-check">
            {{ form_row(registrationForm.agreeTerms, {
                label: 'J\'accepte les termes et conditions',
                attr: {'class': 'form-check-input'}
            }) }}
        </div>

        {# Bouton d'inscription #}
        <button type="submit" class="btn btn-lg btn-primary">
            M'inscrire
        </button>

    {{ form_end(registrationForm) }}
    
    {# Lien vers la page de connexion #}
    <p>Déjà inscrit(e) ? <a href="{{ path('app_login') }}">Me connecter</a></p>
    
    {% endblock %}
</main>

{# Inclusion du script Bootstrap #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% block javascripts %}{% endblock %}
{% block importmap %}{{ importmap('app') }}{% endblock %}

